{
  "name": "manim-interactive",
  "version": "0.1.0",
  "description": "Drag-and-drop Manim animation editor for macOS",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.10",
    "vitest": "^4.0.18",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.14",
    "codemirror": "^6.0.2",
    "expr-eval": "^2.0.2",
    "mathlive": "^0.105.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1",
    "zustand": "^5.0.11"
  },
  "build": {
    "appId": "com.maniminteractive.app",
    "productName": "ManimInteractive",
    "mac": {
      "category": "public.app-category.education",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "runtime/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
